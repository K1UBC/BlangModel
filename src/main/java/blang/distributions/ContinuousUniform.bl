package blang.distributions


model ContinuousUniform {
  
  random RealVar realization
   
  param  RealVar min, 
                 max
  
  laws {
    
    logf(min, max) {
      - log(max - min)
    }
    
    indicator(realization, min, max) {
      min <= realization &&
      realization <= max
    }
    
  }
  
  generate(rand) {
    min + (max-min) * rand.nextDouble
  }
}