package blang.distributions



model Gamma {
  
  random RealVar realization
  
  param  RealVar shape, 
                 rate
  
  laws {
    
    logf(shape, rate, realization) {
      check(shape > 0 && rate > 0)
      (shape - 1.0) * log(realization * rate)
    }
    
    logf(realization, rate) {
      - realization * rate
    }
    
    logf(shape) {
      - lnGamma(shape)
    }
    
    logf(rate) {
      log(rate)
    }
    
    indicator(realization) {
      realization > 0.0
    }
  }
  
  generate(rand) {
    Generators::gamma(rand, shape, rate)
  }
}