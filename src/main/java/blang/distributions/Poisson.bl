package blang.distributions

model Poisson {
  
  random IntVar realization
  
  param RealVar mean
  
  laws {
    
    logf(realization, mean) {
      realization * log(mean)
    }
    
    logf(mean) {
       - mean; 
    }
    
    logf(realization) {
       - factorialLog(realization)
    }
    
    indicator(realization) {
      realization >= 0
    }
    
    indicator(mean) {
      mean > 0
    }
  }
}