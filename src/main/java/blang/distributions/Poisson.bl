package blang.distributions

model Poisson {
  
  random IntVar realization
  
  param RealVar mean
  
  laws {
    
    logf(realization, mean) {
      check (mean > 0)
      realization * log(mean)
    }
    
    logf(mean) {
       - mean; 
    }
    
    logf(realization) {
      return - factorialLog(realization)
    }
    
    indicator(realization) {
      realization >= 0
    }
  }
  
  generate(rand) {
    Generators::poisson(rand, mean)
  }
}