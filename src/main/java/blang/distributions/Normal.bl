package blang.distributions

model Normal {
  
  random RealVar realization 
  
  param RealVar mean,
                variance
  
  laws {  
    
    logf() {
      - log(Math.sqrt(2*Math.PI))
    }
    
    logf(variance) {
      - 0.5 * log(variance)
    }
    
    logf(mean, variance, realization)  {
      - 0.5 * ((mean - realization) ** 2) / variance
    }
    
    indicator(variance)  {
      variance > 0
    }
  }
  
  generate(rand) {
    Generators::normal(rand, mean, variance)
  }
}