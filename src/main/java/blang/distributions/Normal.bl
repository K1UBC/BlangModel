package blang.distributions

model Normal {
  
  random RealVar realization 
  
  param RealVar mean,
                variance
  
  laws {  
    
    logf() {
      - log(2*PI) / 2.0
    }
    
    logf(variance) {
      - 0.5 * log(variance)
    }
    
    logf(mean, variance, realization)  {
      check(variance > 0)
      return - 0.5 * pow(mean - realization, 2) / variance
    }
  }
  
  generate(rand) {
    Generators::normal(rand, mean, variance)
  }
}