import blang.types.RealVar

model {
  
  param RealVar mean 
  param RealVar variance
  
  random RealVar realization 
  
  
  laws {  
    
    logf(mean, variance, realization)  {
      - 0.5 * Math.log(2.0 * Math.PI )  
      - 0.5 * (mean.doubleValue - realization.doubleValue) ** 2
    }
    
    indicator(variance)  {
      variance.doubleValue > 0
    }
  }
  
}