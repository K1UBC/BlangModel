

import blang.types.Table
import blang.types.RealVar
import blang.types.Plate
import blang.types.Index

model {
  
  param Plate<Integer> sample
  
  random RealVar mean
  
  random Table<RealVar> observations
  
  init {
    sample.contains(observations)
  }
  
  laws {
    
    mean ~ Normal([0.0], [1.0])
    
    for (Index<Integer> sampleIndex : Plate.eachIn(sample)) {
      observations.get(sampleIndex) | mean ~ Normal(mean, [1.0])
    }
  }
  
}