package blang.examples

import blang.types.*
import java.util.*
import xlinear.*

import static extension blang.utils.ExtensionUtils.* 
import static extension xlinear.MatrixExtensions.* 
import static blang.utils.StaticUtils.*
import static xlinear.MatrixOperations.* 
import blang.types.RealVar.RealScalar

model SimpleMixture { 
  
  random RealVar Y   
  random IntVar Z
  
  param List<RealVar> means 
  
  laws {
    Z ~ Bernoulli([0.5])
    Y | Z, means ~ Normal(means.get(Z), [1.0])
  }
}